extends layout

block content

  include navbar-gifs
  
  .container.text-center
    h1.display-3.my-5 Funny Gifs
    .d-flex.justify-content-center
      .input-group.col-6.mb-3
        input.form-control(class="giphy-search" type="text", placeholder="Search Photos", aria-label="Search Photos", aria-describedby="basic-addon2")
        .input-group-append
          button.btn.btn-warning.text-light(type="button") Search
    .row
      each gif in gifs
        .col-lg-3.col-md-4.col-sm-6
          .d-block.mb-4.h-100
            img.img-fluid.img-thumbnail(src=""+gif.url+"")
