extends layout

block content

  include navbar-photos
  
  .container.text-center
    h1.display-3.mt-5.mb-4 Cute Photos
    .d-flex.justify-content-center
      form.col-lg-6.col-sm-12.mb-3(action="/photos", method="get")
        .input-group.mb-4
          input.form-control(class="flickr-search", name="query", type="search", placeholder="Search Photos...", aria-label="Search Photos", aria-describedby="basic-addon2")
          .input-group-append
            button.btn.btn-warning.text-light(type="submit") Search
    .row
      each photo in photos
        .col-lg-3.col-md-4.col-sm-6
          .d-block.mb-4.h-100
            img.img-fluid.img-thumbnail(src=""+photo.url+"")
